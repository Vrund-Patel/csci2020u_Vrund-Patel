<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.GridPane?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lab04_vrundpatel.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0"/>
    </padding>

    <GridPane hgap="10" vgap="8">
        <Label fx:id="username" text = "Username: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="fillUsername" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="password" text = "Password: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="fillPassword" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="fullName" text = "Full name: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="fillFullName" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label fx:id="eMail" text = "E-Mail address: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="fillEMail" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label fx:id="phoneNumber" text = "Phone number: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="fillPhoneNumber" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label fx:id="dateOfBirth" text = "Date of birth: " GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <DatePicker fx:id="fillDateOfBirth" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Button text="Register" onAction="#onRegisterButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </GridPane>
</VBox>